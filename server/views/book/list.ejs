<%- include('../partials/header'); -%>
<%- include('../partials/main_nav'); -%>


   <body style="background-color:lightgrey;">
  <h1>List of the Contacts</h1><br><br><br>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="/bookList/add" class="btn btn-primary" role="button">
            <i class ="fas fa-plus-circle"></i> Add Contact</a>
            <%}%>
        <br>  <br>
        <table class = "table table-bordered table-striped table-hover">
            <tr>
                <th class="text-content col-2">Contact Name</th>
                <th class="text-content col-2">Contact Email</th>
                <th class="text-content col-1">Contact Ph. No.</th>
                
                <%if(typeof displayName =='string' && displayName){%>
                <th class="text-content col-1"></th>
                <th class="text-content col-1"></th>
                <%}%>
                </tr>
                
           <% for(let count = 0; count<BookList.length; count++){ %>
            <tr>
                <td class = "text-center col-2"><%=BookList[count].name%></td>
                <td class = "text-center col-2"><%=BookList[count].published%></td>
                <td class = "text-center col-1"><%=BookList[count].author%></td>
               
                <%if(typeof displayName =='string' && displayName){%>
                <td class ="text-center col-1"><a href="/bookList/edit/<%=BookList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                <td class ="text-center col-1"><a href="/bookList/delete/<%=BookList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>    
            <%}%>
            </tr>
                <%}%>
            </table>

        </div>
    </div>
    </main>

<%- include('../partials/footer'); -%>